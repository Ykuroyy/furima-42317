<% if model && model.errors.any? %>
  <div id="error_explanation" class="error-alert">
    <h2>
      <%= "#{model.errors.count}件のエラーがあります。" %>
    </h2>
    <ul>
      <% model.errors.full_messages.uniq.each do |message| %>
        <li class="error-message"><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
